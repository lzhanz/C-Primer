int main()
{
	forward_list<int> li{ 1,5,2,6,2,4,2,1,9};
	auto it = li.before_begin();
	auto prev = li.begin();
	while (prev != li.end())
	{
		if ((*prev) % 2 == 1)
		{
			prev = li.erase_after(it);
			
		}
		else
		{
			it = prev;
			++prev;
		}
	}

	for (auto i : li)
	{
		cout << i << endl;
	}

	system("pause");
}
